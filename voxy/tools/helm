#!/bin/bash

set -euo pipefail

FILEPATH=$(readlink -f "$0")
BASEDIR=$(dirname "$FILEPATH")
WORKSPACEDIR=$(dirname "$BASEDIR")
cd "$WORKSPACEDIR" || exit 1

BINARY="$WORKSPACEDIR/bazel-bin/external/helm/helm"

if ! test -f "$BINARY"; then
	"$WORKSPACEDIR"/bazel build @helm//:helm
fi

exec "$BINARY" "$@"
