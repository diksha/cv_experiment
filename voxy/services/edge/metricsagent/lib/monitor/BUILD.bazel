load("@io_bazel_rules_go//go:def.bzl", "go_library", "go_test")

go_library(
    name = "monitor",
    srcs = [
        "core.go",
        "gpu.go",
        "network.go",
    ],
    importpath = "github.com/voxel-ai/voxel/services/edge/metricsagent/lib/monitor",
    visibility = ["//visibility:public"],
    deps = [
        "//go/edge/metricsctx",
        "@com_github_shirou_gopsutil//cpu",
