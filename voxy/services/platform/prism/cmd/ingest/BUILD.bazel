load("@io_bazel_rules_go//go:def.bzl", "go_binary", "go_library")
load("//third_party/aws/lambda:defs.bzl", "go_aws_lambda")

go_aws_lambda(
    name = "production",
    function_name = "voxel-production-prism-incident-ingest",
    target = ":ingest",
)

go_aws_lambda(
    name = "staging",
    function_name = "voxel-staging-prism-incident-ingest",
    target = ":ingest",
)

go_library(
    name = "ingest_lib",
    srcs = [
        "kinesisvideo.go",
        "main.go",
    ],
    importpath = "github.com/voxel-ai/voxel/services/platform/prism/cmd/ingest",
    visibility = ["//visibility:private"],
    deps = [
        "//services/platform/prism/lib/fragarchive",
        "//services/platform/prism/lib/incident",
        "//services/platform/prism/lib/ingest",
        "@com_github_aws_aws_lambda_go//lambda",
        "@com_github_aws_aws_sdk_go_v2_config//:config",
        "@com_github_aws_aws_sdk_go_v2_service_kinesisvideo//:kinesisvideo",
        "@com_github_aws_aws_sdk_go_v2_service_kinesisvideo//types",
        "@com_github_aws_aws_sdk_go_v2_service_kinesisvideoarchivedmedia//:kinesisvideoarchivedmedia",
        "@com_github_aws_aws_sdk_go_v2_service_s3//:s3",
        "@com_github_cristalhq_aconfig//:aconfig",
        "@com_github_rs_zerolog//log",
    ],
)

go_binary(
    name = "ingest",
    embed = [":ingest_lib"],
    visibility = ["//visibility:public"],
)
